{{~#if this.banner_title~}}
    <p class=post-banner>{{{this.banner_title}}}</p>
{{~/if}}
{{~#if this.banner_desc~}}
    <p class=post-banner-desc>{{{this.banner_desc}}}</p>
{{~/if~}}
<article><details open><summary title="Hide post" class=module-summary>Show post</summary>{{nop~}}
    <h3 class=article-header>{{{this.title_html}}}</h3>
    {{~#if this.excerpt_html~}}
        <main>{{{this.excerpt_html}}}</main>
    {{~/if~}}
    <footer class=footer-container>{{nop~}}
    <div class=footer-main>{{nop~}}
        submitted by <a href="@{{this.submitted_by_username}}">{{this.submitted_by_username}}</a> {{nop~}}
        {{date this.created_at}} and got {{nop~}}
        <a href="{{this.uuid}}#comments">{{this.comment_count}} comments</a>{{nop~}}
    </div>{{nop~}}
    <form class=footer-aside action="vote?redirect=2&U={{../session.uuid}}" method=POST>
        {{~#if (gte ../user.trust_level 3)~}}
            <a href="edit-post?post={{this.uuid}}" class=button>Edit</a> {{nop~}}
        {{~/if~}}
        <button{{#if ../user.id}} title="{{#if this.starred_by_me}}Remove star{{else}}Add star{{/if}}"{{else}} disabled title="Log in to vote"{{/if}} name="{{#if this.starred_by_me}}rm_star{{else}}add_star{{/if}}" value={{this.uuid}}>{{nop~}}
            <span>{{this.score}}</span> {{nop~}}
            <img width=12 height=12 class=good-img src=assets/{{#if this.starred_by_me}}star_active.svg{{else}}star.svg{{/if}} alt="{{#if this.starred_by_me}}Remove star{{else}}Add star{{/if}}">{{nop~}}
        </button> {{nop~}}
        {{~#if (gte ../user.trust_level 1)~}}
        <button class={{#if this.flagged_by_me}}flag-button-active{{else}}""{{/if}} name="{{#if this.flagged_by_me}}rm_flag{{else}}add_flag{{/if}}" value={{this.uuid}} title="{{#if this.flagged_by_me}}Remove flag{{else}}Add flag{{/if}}">{{nop~}}
            <img width=12 height=12 class=good-img src=assets/{{#if this.flagged_by_me}}flag_active{{else}}flag{{/if}}.svg alt="{{#if this.flagged_by_me}}Remove flag{{else}}Add flag{{/if}}"> {{nop~}}
        </button>
        {{~/if~}}
    </form>{{nop~}}
    </footer>{{nop~}}
</details></article>