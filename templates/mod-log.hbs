{{#*inline "page"}}
    <table class=good-table>
        <thead>
            <tr>
                <th>Date / Moderator</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {{#each log}}
            <tr>
                <td><a href="?after={{this.id}}">{{this.created_at}}</a> / {{this.created_by_username}}</td>
                <td>
                    <dl>
                        {{#each this.payload}}
                            <dt>{{@key}}</dt>
                            <dd>
                                <pre>{{this}}</pre>
                            </dd>
                        {{/each}}
                    </dl>
                </td>
            </tr>
        {{#if @last}}
            <tr><td colspan="3"><a href="?after={{this.id}}">Next page</a></td></tr>
        {{/if}}
        {{/each}}
        </tbody>
    </table>
{{/inline}}
{{~> layout~}}
