{{#*inline "page"}}
    {{#if (not posts.0.visible)}}
    <div class=alert>This post is waiting for moderator attention.</div>
    {{/if}}
    {{#if (gte user.trust_level 3)}}
    <details-menu-bar>
            <details class=details-dialog-outer>
                <summary class=details-dialog-summary>Edit Banner</summary>
                <details-dialog>
                    <form action="banner-post?U={{session.uuid}}" method=POST>
                        <input type=hidden name=post value={{posts.0.uuid}}>
                        <label for=banner-post-title>Title</label>
                        <input type=text id=banner-post-title name=banner_title autofocus>
                        <label for=banner-post-desc>Description</label>
                        <input type=text id=banner-post-desc name=banner_desc>
                        <div class=form-footer>
                            <button class=button-default>Add banner</button>
                            <details-dialog-close><a href={{posts.0.uuid}} class=button>Cancel</a></details-dialog-close>
                        </div>
                    </form>
                </details-dialog>
            </details>
    </details-menu-bar>
    {{/if}}
    <ajax-form>
        {{#if posts.0.banner_title}}
            <p class=post-banner>{{{posts.0.banner_title}}}</p>
        {{/if}}
        {{#if posts.0.banner_desc}}
            <p class=post-banner-desc>{{{posts.0.banner_desc}}}</p>
        {{/if}}
        <article>
            <h2 class=article-header>{{#if is_private}}ðŸ”’ {{/if}}{{{posts.0.title_html}}}</h2>
            {{#if posts.0.excerpt_html}}
                <main>{{{posts.0.excerpt_html}}}</main>
            {{/if}}
            <footer class=footer-container>
            <div class=footer-main>
            submitted by <a href="@{{posts.0.submitted_by_username}}">{{posts.0.submitted_by_username}}</a>
            <local-date title="{{posts.0.created_at}}+00:00">{{posts.0.created_at_relative}}</local-date>
            {{#if starred_by}}
                starred by
                {{#each starred_by}}
                    <a href="@{{this}}">{{this}}</a>
                    {{#unless @last}},{{/unless}}
                {{/each}}
            {{/if}}
            </div>
            <form class=footer-aside action="vote?redirect={{posts.0.uuid}}&U={{session.uuid}}" method=POST>
                {{#if (gte user.trust_level 3)}}
                    <a href="edit-post?post={{posts.0.uuid}}" class=button>Edit</a>
                {{/if}}
                <button{{#if user.id}} title="{{#if posts.0.starred_by_me}}Remove star{{else}}Add star{{/if}}"{{else}} disabled title="Log in to vote"{{/if}} name="{{#if posts.0.starred_by_me}}rm_star{{else}}add_star{{/if}}" value={{posts.0.uuid}}>
                    <span>{{posts.0.score}}</span>
                    <img width=12 height=12 class=good-img src=assets/{{#if posts.0.starred_by_me}}star_active.svg{{else}}star.svg{{/if}} alt="{{#if posts.0.starred_by_me}}Remove star{{else}}Add star{{/if}}">
                </button>
                {{#if (gte user.trust_level 1)}}
                    <button class={{#if posts.0.flagged_by_me}}flag-button-active{{else}}""{{/if}} name="{{#if posts.0.flagged_by_me}}rm_flag{{else}}add_flag{{/if}}" value={{posts.0.uuid}} title="{{#if posts.0.flagged_by_me}}Remove flag{{else}}Add flag{{/if}}">
                        <img width=12 height=12 class=good-img src=assets/{{#if posts.0.flagged_by_me}}flag_active{{else}}flag{{/if}}.svg alt="{{#if posts.0.flagged_by_me}}Remove flag{{else}}Add flag{{/if}}">
                    </button>
                {{/if}}
            </form>
            </footer>
        </article>
        <h3 id=comments>{{posts.0.comment_count}} comments</h3>
        {{#each legacy_comments}}
            <aside id="{{this.id}}"><details open><summary title="Hide comment" class=module-summary>Show comment</summary>
                <main>{{{this.html}}}</main>
                <footer>
                    old comment posted by {{this.author}}
                    <local-date title="{{this.created_at}}+00:00">{{this.created_at_relative}}</local-date>
                    <a href="#{{this.id}}">#{{this.id}}</a>
                </footer>
            </details></aside>
        {{/each}}
        {{#each comments}}
            <aside id="{{this.id}}"><details open><summary title="Hide comment" class=module-summary>Show comment</summary>
                <main>{{{this.html}}}</main>
                <footer class=footer-container>
                    <div class=footer-main>
                    posted by <a href="@{{this.created_by_username}}">{{this.created_by_username}}</a>
                    <local-date title="{{this.created_at}}+00:00">{{this.created_at_relative}}</local-date>
                    <a href="#{{this.id}}">#{{this.id}}</a>
                    {{#if this.starred_by}}
                        starred by
                        {{#each this.starred_by}}
                            <a href="@{{this}}">{{this}}</a>
                            {{#unless @last}},{{/unless}}
                        {{/each}}
                    {{/if}}
                    </div>
                    <form class=footer-aside action="vote-comment?redirect={{posts.0.uuid}}&U={{../session.uuid}}" method=POST>
                    {{#if (or (gte ../user.trust_level 3) (eq this.created_by ../user.id))}}
                        <a href="edit-comment?comment={{this.id}}" class=button>Edit</a>
                    {{/if}}
                    <button{{#if ../user.id}} title="{{#if this.starred_by_me}}Remove star{{else}}Add star{{/if}}"{{else}} disabled title="Log in to vote"{{/if}} name="{{#if this.starred_by_me}}rm_star_comment{{else}}add_star_comment{{/if}}" value={{this.id}}>
                        <span>{{count this.starred_by}}</span>
                        <img width=12 height=12 class=good-img src=assets/{{#if this.starred_by_me}}star_active.svg{{else}}star.svg{{/if}} alt="{{#if this.starred_by_me}}Remove star{{else}}Add star{{/if}}">
                    </button>
                    {{#if (gte ../user.trust_level 1)}}
                        <button class={{#if this.flagged_by_me}}flag-button-active{{else}}""{{/if}} name="{{#if this.flagged_by_me}}rm_flag_comment{{else}}add_flag_comment{{/if}}" value={{this.uuid}} title="{{#if this.flagged_by_me}}Remove flag{{else}}Add flag{{/if}}">
                            <img width=12 height=12 class=good-img src=assets/{{#if this.flagged_by_me}}flag_active{{else}}flag{{/if}}.svg alt="{{#if this.flagged_by_me}}Remove flag{{else}}Add flag{{/if}}">
                        </button>
                    {{/if}}
                    </form>
                </footer>
            </details></aside>
        {{/each}}
    </ajax-form>
    {{#if user.id}}
    <form action="comment?U={{session.uuid}}" method=POST id=comment-form>
        <label>
            <h3 id=comment-form>Add your comment</h3>
            <smart-textarea><textarea name=text required is=smart-punct-textarea></textarea></smart-textarea>
        </label>
        <input type=hidden name=post value="{{posts.0.uuid}}">
        <span style="float:left;margin-top:1em;position:relative;top:2px"><button>Add comment</button>&nbsp;</span>
    </form>
    <details-menu-bar class=form-footer>
        <details class=details-menu-outer>
            <summary class=details-menu-summary aria-haspopup=menu>{{#if is_subscribed}}Subscribed{{else}}Not subscribed{{/if}}</summary>
            <form class=details-menu-inner role=menu action="subscriptions?redirect={{posts.0.uuid}}&U={{session.uuid}}" method=POST is=subscriptions-menu>
                <input type=hidden name=post value="{{posts.0.uuid}}">
                <button class=details-menu-item role=menuitem name=subscribed value=true>Subscribe</button>
                <button class=details-menu-item role=menuitem name=subscribed value=false>Unsubscribed</button>
            </form>
        </details>
    </details-menu-bar>
    <p>When you subscribe, you get a notification whenever someone comments on this post.</p>
    {{else}}
    <div class=inner-banner>
        {{{config.comments_placeholder_html}}}
    </div>
    {{/if}}
{{/inline}}
{{~> layout~}}
