{{#*inline "page"}}
<header class=tight-headline>
<h2>@{{title}}</h2>
<nav><a href=@{{urlencode title}}>Posts</a> &bull; <b>Comments</b>{{#if is_me}} &bull; <a href=subscriptions>Subscriptions</a>{{/if}}</nav>
</header>
{{#each comment_search_result}}
    <h3><a href={{this.post_uuid}}>{{this.post_title}}</a></h3>
    <aside>
        <main class=main-aside>{{{this.html}}}</main>
        <footer>
            posted by {{this.created_by_username}}
            <local-date title="{{this.created_at}}+00:00">{{this.created_at_relative}} <span class=hide-small>ago</span></local-date>
        </footer>
    </aside>
    {{#if @last}}
    <p><a href="?user={{../title}}&after={{this.id}}">Next page</a></p>
    {{/if}}
{{/each}}
{{/inline}}
{{~> layout~}}
