{{#*inline "page"}}
  <form action='' method=POST>
      <label>URL <input name=url required></label>
      <label>Title and #hashtags <input name=title autofocus is="smart-punct-input"></label>
      <label>Excerpt
          <smart-textarea><textarea name=excerpt placeholder="If you leave the title or excerpt empty, we'll try to automatically pull it from the page." is="smart-punct-textarea" class="main"></textarea></smart-textarea>
      </label>
      <div class=form-footer>
          <button>Submit link</button>
      </div>
  </form>
{{/inline}}
{{~> (parent)~}}
