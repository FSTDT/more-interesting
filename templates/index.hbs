{{#if keywords_param}}
<header class=tight-headline>
<h2>Search results</h2>
<code>{{keywords_param}}</code>
<nav>
    <b>Relevance</b> &bull;
    <a href="latest?q={{urlencode keywords_param}}{{#if title_param}}&title={{urlencode title_param}}{{/if}}{{#if before_date_param}}&before_date={{before_date_param}}{{#if after_date_param}}&after_date={{after_date_param}}{{else}}{{/if}}{{else}}{{/if}}">Latest</a> &bull;
    <a href="top?q={{urlencode keywords_param}}{{#if title_param}}&title={{urlencode title_param}}{{/if}}{{#if before_date_param}}&before_date={{before_date_param}}{{#if after_date_param}}&after_date={{after_date_param}}{{else}}{{/if}}{{else}}{{/if}}">Top</a> &bull;
    <a href="new?q={{urlencode keywords_param}}{{#if title_param}}&title={{urlencode title_param}}{{/if}}{{#if before_date_param}}&before_date={{before_date_param}}{{#if after_date_param}}&after_date={{after_date_param}}{{else}}{{/if}}{{else}}{{/if}}">New</a> &bull;
    <details class=details-dialog-outer>
        <summary class=inline-summary><u>
            {{#if before_date_param}}{{before_date_param}}{{else}}Date{{/if}}…
        </u></summary>
        <details-dialog>
            <form action=./ method=GET>
                <label>Find posts before
                    <input type=date name=before_date autofocus required {{#if before_date_param}}value="{{before_date_param}}"{{/if}}>
                </label>
                <label>Find posts after
                    <input type=date name=after_date {{#if after_date_param}}value="{{after_date_param}}"{{/if}}>
                </label>
                <input type=hidden name=q value="{{keywords_param}}">
                <input type=hidden name=title value="{{title_param}}">
                <div class=form-footer>
                    <button class=button-default>Search</button>
                    <a href="" onclick="return !window.DetailsDialogElement" class=button data-close-dialog>Cancel</a>
                </div>
            </form>
        </details-dialog>
    </details>
</nav>
</header>
{{/if}}
{{~> view-index~}}
{{~#if keywords_param}}
<p><a href=".?page={{next_search_page}}&q={{urlencode keywords_param}}{{#if title_param}}&title={{urlencode title_param}}{{/if}}{{#if tag_param}}&tag={{tag_param}}{{/if}}{{#if domain}}&domain={{domain}}{{/if}}">Next page</a></p>
{{~/if~}}
{{/inline}}
